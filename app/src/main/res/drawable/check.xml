<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use gold -->
    <item android:drawable="@drawable/on_pressed" android:state_checked="true" android:state_pressed="true" />
    <item android:drawable="@drawable/on" android:state_checked="true" />
    <!-- When not selected, use white-->
    <item android:drawable="@drawable/off_pressed" android:state_checked="false" android:state_pressed="true" />
    <item android:drawable="@drawable/off" android:state_checked="false" />

</selector>